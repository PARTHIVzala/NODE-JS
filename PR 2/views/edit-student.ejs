<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Student</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f2f2f2;
    }
    .container {
      width: 400px;
      margin: 50px auto;
      background: #fff;
      padding: 20px;
      border-radius: 8px;
    }
    h2 {
      text-align: center;
    }
    input {
      width: 100%;
      padding: 8px;
      margin: 10px 0;
    }
    button {
      width: 100%;
      padding: 10px;
      background: #007bff;
      color: #fff;
      border: none;
      cursor: pointer;
    }
    button:hover {
      background: #0056b3;
    }
    a {
      display: block;
      text-align: center;
      margin-top: 10px;
      text-decoration: none;
    }
  </style>
</head>
<body>

  <div class="container">
    <h2>Edit Student</h2>

    <!-- IMPORTANT -->
    <form action="/update-student/<%= student.id %>" method="post">

      <input
        type="text"
        name="name"
        placeholder="Student Name"
        value="<%= student.name %>"
        required
      />

      <input
        type="text"
        name="course"
        placeholder="course"
        value="<%= student.course %>"
        required
      />

      <input
        type="number"
        name="marks"
        placeholder="marks"
        value="<%= student.marks %>"
        required
      />

      <button type="submit">Update Student</button>
    </form>

    <a href="/">â¬… Back to List</a>
  </div>

</body>
</html>
